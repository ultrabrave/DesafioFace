<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/developerIv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/developerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:text="Juan Cristobal"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/twitterBtn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/ic_twitter_black_24dp"
                android:theme="@style/WhiteButton" />

            <ImageButton
                android:id="@+id/githubBtn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/ic_github_black_24dp"
                android:theme="@style/WhiteButton" />

            <ImageButton
                android:id="@+id/mailBtn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/ic_mail_black_24dp"
                android:theme="@style/WhiteButton" />

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/ic_share_black_24dp"
                android:theme="@style/WhiteButton" />

            <com.like.LikeButton
                android:id="@+id/favoriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="6dp"
                app:anim_scale_factor="2"
                app:circle_end_color="@color/colorAccent"
                app:circle_start_color="@color/colorBlack"
                app:dots_primary_color="@color/colorPrimary"
                app:dots_secondary_color="@color/colorPrimaryDark"
                app:icon_size="22dp"
                app:icon_type="star" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>